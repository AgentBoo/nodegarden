
@import 'nib'

*
  margin: 0
  padding: 0

html, body
  height: 100%

body
  background-color: #f5f5f5
  overflow: hidden

#container
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden

@media (max-width: 1024px)
  .ribbon
    transform: scale(.75)
    transform-origin: 100% 0

@media (max-width: 640px)
  .ribbon
    transform: scale(.5)
    transform-origin: 100% 0
